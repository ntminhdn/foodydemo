<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <Button
        android:id="@+id/btnComment"
        android:layout_width="30dp"
        android:layout_height="14dp"
        android:layout_marginLeft="65dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/chat"
        android:text="9"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnPhotos"
        android:layout_width="30dp"
        android:layout_height="14dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/btnComment"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/camera"
        android:text="9"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/ivStatus"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/circlegreen" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/ivStatus"
        android:layout_toRightOf="@+id/btnPhotos"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:text="Đang mở cửa"
        android:textSize="10sp" />
</RelativeLayout>